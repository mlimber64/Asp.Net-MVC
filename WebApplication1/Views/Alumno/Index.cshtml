
@{
    ViewBag.Title = "Index";
}

<link href="~/Content/datatables.css" rel="stylesheet" />
<link href="~/Content/jquery-ui.min.css" rel="stylesheet" />


<h2>Alumno</h2>
<br><br />
<label>Seleccione Sexo :</label>
<select id="cboSexo"></select>
<input type="button" id="btnBuscar" value="BUSCAR" class="btn btn-primary" />
<input type="button" id="btnLimpiar" value="LIMPIAR" class="btn btn-metal" />
<br><br />
<button type="button" class="btn btn-info" data-toggle="modal" data-target="#myModal">Agregar</button>
<br><br />
<div id="tabla"></div>


<!-- Modal -->
<div id="myModal" class="modal" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Modal Header</h4>
            </div>
            <div class="modal-body">
                <table style="width:80%;margin:auto">
                    <tr>
                        <td width="40%">ID</td>
                        <td width="60%"><input type="text" id="txtidPeriodo" readonly /></td>
                    </tr>
                    <tr>
                        <td width="40%">NOMBRE</td>
                        <td width="60%"><input type="text" id="txtNombre" /></td>
                    </tr>
                    <tr>
                        <td width="40%">APELLIDO PATERNO</td>
                        <td width="60%"><input type="text" id="txtapepa" /></td>
                    </tr>
                    <tr>
                        <td width="40%">APELLIDO MATERNO</td>
                        <td width="60%"><input type="text" id="txtapema" /></td>
                    </tr>
                    <tr>
                        <td width="40%">FECHA NACIMIENTO</td>
                        <td width="60%"><input type="text" id="dtfechanac" /></td>
                    </tr>
                    <tr>
                        <td width="40%">SEXO</td>
                        <td width="60%"><select id="cboSexopopup"></select></td>
                    </tr>
                    <tr>
                        <td width="40%">TELEFONO PATERNO</td>
                        <td width="60%"><input type="text" id="txttelfpa" /></td>
                    </tr>
                    <tr>
                        <td width="40%">TELEFONO MATERNO</td>
                        <td width="60%"><input type="number" id="txttelma" /></td>
                    </tr>
                    <tr>
                        <td width="40%">NUMERO HERMANOS</td>
                        <td width="60%"><input type="number" id="txtnroher" /></td>
                    </tr>
                </table>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-success" id="btnAceptar">Aceptar</button>
                <button type="button" class="btn btn-danger" id="btnCancelar" data-dismiss="modal">Cancelar</button>
            </div>
        </div>

    </div>
</div>


<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/datatables.min.js"></script>
<script src="~/Scripts/jquery-ui.min.js"></script>
<script src="~/Scripts/alumno.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
